{
  "name": "@advjs/monorepo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@7.2.0",
  "description": "面向未来与前端的 ADV 文字冒险游戏引擎。",
  "author": {
    "name": "YunYouJun",
    "email": "me@yunyoujun.cn",
    "url": "https://www.yunyoujun.cn"
  },
  "license": "MPL-2.0",
  "homepage": "https://advjs.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/YunYouJun/advjs"
  },
  "scripts": {
    "build": "pnpm -C packages/advjs build",
    "build:all": "esno scripts/build.ts",
    "demo": "pnpm -C demo/starter run dev",
    "start": "pnpm -C packages/advjs run start",
    "dev": "pnpm -C packages/advjs run dev",
    "lint": "eslint .",
    "release": "esno release.ts",
    "prepare": "husky install",
    "preview": "pnpm -C packages/advjs preview",
    "core:build": "pnpm -C packages/core build",
    "docs:build": "pnpm -C docs build",
    "docs:dev": "pnpm -C docs dev",
    "docs:serve": "pnpm -C docs serve",
    "editor:build": "pnpm -C packages/editor build",
    "editor:dev": "pnpm -C packages/editor dev",
    "parser:build": "pnpm -C packages/parser build",
    "vrm:build": "pnpm -C packages/vrm build",
    "vrm:dev": "pnpm -C packages/vrm dev",
    "types:build": "pnpm -C packages/types build",
    "typecheck": "vue-tsc --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "@advjs/core": "workspace:*",
    "@advjs/parser": "workspace:*",
    "@advjs/theme-default": "workspace:*",
    "@advjs/types": "workspace:*",
    "@antfu/eslint-config": "^0.25.1",
    "@antfu/ni": "^0.16.2",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.42",
    "@types/prompts": "^2.0.14",
    "@types/semver": "^7.3.9",
    "@types/unist": "^2.0.6",
    "@types/yargs": "^17.0.10",
    "advjs": "workspace:*",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "eslint": "8.17.0",
    "esno": "^0.16.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "tsup": "^5.12.9",
    "typescript": "^4.7.3",
    "vitest": "^0.14.2"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix"
    ]
  }
}

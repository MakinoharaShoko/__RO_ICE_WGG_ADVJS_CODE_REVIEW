{
  "name": "advjs",
  "version": "0.0.1",
  "description": "面向未来与前端的 ADV 文字冒险游戏引擎。",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/YunYouJun/advjs"
  },
  "author": {
    "name": "YunYouJun",
    "email": "me@yunyoujun.cn",
    "url": "https://www.yunyoujun.cn"
  },
  "homepage": "https://advjs.org",
  "license": "MPL-2.0",
  "scripts": {
    "build": "pnpm build -C packages/advjs",
    "dev": "pnpm dev -C packages/advjs",
    "lint": "eslint \"**/*.{vue,ts,js}\"",
    "lint:fix": "eslint \"**/*.{vue,ts,js}\" --fix",
    "release": "ts-node-script release.ts",
    "prepare": "husky install",
    "preview": "pnpm preview -C packages/advjs",
    "docs:build": "pnpm -C docs build",
    "docs:dev": "pnpm -C docs dev",
    "docs:serve": "pnpm -C docs serve",
    "editor:build": "pnpm build -C packages/editor",
    "editor:dev": "pnpm dev -C packages/editor",
    "vrm:build": "pnpm build -C packages/vrm",
    "vrm:dev": "pnpm dev -C packages/vrm"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.16.0",
    "@types/node": "^17.0.8",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "eslint": "8.6.0",
    "esno": "^0.14.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "pnpm": "^6.26.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "vitepress-theme-you": "^0.0.31"
  }
}

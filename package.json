{
  "name": "advjs",
  "version": "0.0.1",
  "description": "面向未来与前端的 ADV 文字冒险游戏引擎。",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/YunYouJun/advjs"
  },
  "author": {
    "name": "YunYouJun",
    "email": "me@yunyoujun.cn",
    "url": "https://www.yunyoujun.cn"
  },
  "homepage": "https://advjs.org",
  "license": "MPL-2.0",
  "scripts": {
    "dev": "pnpm dev -C packages/advjs",
    "build": "cd packages/advjs && npm run build",
    "lint": "eslint \"**/*.{vue,ts,js}\"",
    "lint:fix": "eslint \"**/*.{vue,ts,js}\" --fix",
    "release": "ts-node-script release.ts",
    "prepare": "husky install",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "docs:serve": "pnpm -C docs serve"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.9.0",
    "@types/node": "^16.10.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "pnpm": "^6.16.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "*.{js,ts,html}": [
      "npm run lint"
    ]
  }
}

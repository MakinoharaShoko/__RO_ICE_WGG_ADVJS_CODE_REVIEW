{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@advjs/parser": ["packages/parser/*"],
      "@advjs/shared": ["packages/shared/*"],
    }
  },
  "include": ["packages/global.d.ts", "packages/**/*/src"]
}

{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@advjs/core/*": ["packages/advjs/*"],
      "@advjs/parser/*": ["packages/parser/src/*"],
      "@advjs/shared/*": ["packages/shared/src/*"],
      "advjs/*": ["packages/advjs/src/*"]
    }
  },
  "include": ["packages/global.d.ts", "packages/**/*/src"]
}

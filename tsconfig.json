{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "@babylonjs/core",
      "@babylonjs/loaders",
      "@babylonjs/gui",
      "@babylonjs/materials",
      "babylon-vrm-loader",
      "vitepress/client",
      "vite/client",
      "node",
      "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-pwa/client",
      "vite-plugin-vue-layouts/client"
    ],
    "paths": {
      "~/*": [
        "./packages/client/*"
      ],
      "advjs": [
        "./packages/advjs/node/index.ts"
      ],
      "@advjs/editor/*": [
        "./editor/core/*"
      ],
      "@advjs/client/*": [
        "./packages/client/*"
      ],
      "@advjs/examples/*": [
        "./packages/examples/*"
      ],
      "@advjs/parser/fs": [
        "./packages/parser/src/fs.ts"
      ],
      "@advjs/shared/*": [
        "./packages/shared/src/*"
      ],
      "@advjs/theme-default": [
        "./packages/theme-default/index.ts"
      ],
      "@advjs/theme-default/*": [
        "./packages/theme-default/*"
      ],
      "@advjs/*": [
        "./packages/*/src/index.ts"
      ],
      "advjs/*": [
        "./packages/advjs/src/*"
      ]
    }
  },
  "include": [
    "./*.ts",
    // disable for VPHero.vue
    // "./docs/.vitepress/**/*.ts",
    // "./docs/.vitepress/**/*.vue",
    "./editor/**/*.ts",
    "./packages/global.d.ts",
    "./packages/**/*.ts",
    "./packages/**/*.vue"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
